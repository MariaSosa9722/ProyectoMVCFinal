
@model IEnumerable<Proyecto.Models.Usuario>
@{
    ViewData["Title"] = "Home Page";
}

@*<h1 class="text-center">Bienvenidos</h1>*@
<div class="row">
    <div class=" offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Home" class="btn-success d-block mx-auto btn-lg"> Nuevo Usuario</a>
    </div>
</div>

<di v  class="container-fluid">
    <div class="offset-12"> 
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Lista de usuarios</strong></h1>

            </div>

            <div class="card-body">
                <div class="table-responsive"> 
                    @{
                        int i = 1;
                    }
                    @if(Model.Count() > 0){



                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th> Id</th>
                                    <th> @Html.DisplayNameFor(x => x.Nombre )</th>
                                    <th> @Html.DisplayNameFor(x => x.User )</th>
                                    <th> @Html.DisplayNameFor(x => x.Password )</th>
                                    <th> @Html.DisplayNameFor(x => x.FkRol)</th>
                                    <th> Acciones</th>
                                </tr>


                            </thead>
                            <tbody>
                                
                                   @foreach(var Item  in Model ){


                                       <tr>
                                        <td><span>@i++</span></td>

                                        <td> @Html.DisplayFor(x => Item.Nombre )</td>
                                        <td> @Html.DisplayFor(x => Item.User )</td>
                                        <td> @Html.DisplayFor(x => Item.Password )</td>
                                        <td> @Html.DisplayFor(x => Item.roles.Nombre)</td>
                                        <td> 
                                            <a class=" btn btn-warning" asp-action="Editar" asp-route-id =@Item.PkUsuario> Editar</a>
                                            <a class=" btn btn-danger" asp-action="Eliminar" asp-route-id=@Item.PkUsuario> Eliminar</a>
                                        </td>

                                       </tr>


                                   }

                            </tbody>

                        </table>

                    }else{
                        <p>No hay registros</p>
                    }
                </div>

            </div>


        </div>


    </div>

   


</di>


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
